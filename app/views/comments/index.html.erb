<h1>Listing comments</h1>
<%= @post.title %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.title %></td>
        <td><%= comment.content %></td>
        <td><%= link_to 'Show', [@blog, @post, comment] %></td>
        <td><%= link_to 'Edit', edit_blog_post_comment_path(@blog, @post, comment) %></td>
        <td><%= link_to 'Destroy', [@blog, @post, comment], method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_blog_post_comment_path %>
