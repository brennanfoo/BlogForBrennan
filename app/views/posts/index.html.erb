<h1><%= @blog.title %></h1>
<%= link_to 'Edit Blog', edit_blog_path(@blog) %> | 
<%= link_to 'New Blog Post', new_blog_post_path %>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, [@blog, post] %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Edit', edit_blog_post_path(@blog, post) %></td>
        <td><%= link_to 'Destroy', [@blog, post], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>