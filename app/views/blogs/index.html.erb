<h1>Welcome! Here are all the blogs.</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= link_to blog.title, blog %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<% @blogs.each do |blog| %>
<div class = "row">
  <div class = "col-md-8">
  <%= link_to blog.title, blog %>
  </div>
</div>

<% end %>

<br>

<%= link_to 'New Blog', new_blog_path %>
